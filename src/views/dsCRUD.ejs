<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Document</title>
		<style>
			table {
				font-family: arial, sans-serif;
				border-collapse: collapse;
				width: 100%;
			}

			td,
			th {
				border: 1px solid #dddddd;
				text-align: left;
				padding: 8px;
			}

			tr:nth-child(even) {
				
			}
		</style>
	</head>
	<body>
		<table>
			<tr>
				<th>Email</th>
				<th>Password</th>
				<th>FullName</th>
				<th>PhoneNumber</th>
				<th>Action</th>
			</tr>
			<% for(var i = 0;i < data.length; i++) { %>
                <tr>
                    <td><%= data[i].Email %></td>
                    <td><%= data[i].Password %></td>
                    <td><%= data[i]. FullName %></td>
                    <td><%= data[i].PhoneNumber %></td>
					<td style="justify-content: space-around; display: flex;">
						<a href="/edit-user?id=<%= data[i].UserID %>"><button type="submit">Edit</button></a>
						<a href="/delete-crud?id=<%= data[i].UserID %>"><button type="submit">Del</button></a>
					</td>
                </tr>
				<% } %>
            </table>
            <p><% data %></p>
        </body>
</html>
